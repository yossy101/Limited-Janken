{
    "compilerOptions": {
        "target": "ES2020",
            "lib": ["DOM", "DOM.Iterable", "ESNext"],
                "module": "ESNext",
                    "moduleResolution": "Bundler",
                        "jsx": "preserve",
                            "noEmit": true,
                                "strict": true,
                                    "skipLibCheck": true,
                                        "esModuleInterop": true,
                                            "resolveJsonModule": true,
                                                "isolatedModules": true,
                                                    "incremental": true,

                                                        "baseUrl": ".",
                                                            "paths": {
                                                                  "~/*": ["./*"]
                                                                      },

                                                                          "plugins": [{ "name": "next" }]
                                                                            },
                                                                              "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
                                                                                "exclude": ["node_modules"] 
                                                                              }
